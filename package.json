{
  "name": "MCAZ-Desktop",
  "version": "1.0.0",
  "description": "MCAZ Desktop application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -m",
    "postinstall": "electron-builder install-app-deps",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=release-builds --icon=assets/icons/mac/icon.icns",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"MCAZ Desktop App\"",
    "package-linux": "electron-packager . --overwrite --asar=true --icon=assets/icons/png/128x128.png --platform=linux --arch=x64 --prune=true --out=release-builds",
    "create-installer-win": "node installers/windows/createinstaller.js"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "MCAZ",
    "Desktop",
    "application",
    "ADR",
    "SAE",
    "AEFI"
  ],
  "author": "IntelliSOFT Kenya Limited",
  "license": "CC0-1.0",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "devtron": "^1.4.0",
    "electron": "~1.7.8",
    "electron-builder": "^19.45.5",
    "electron-packager": "^8.1.0",
    "electron-winstaller": "^2.6.3",
    "eslint": "^4.11.0",
    "react-hot-loader": "^3.1.3",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "b64-to-blob": "^1.2.19",
    "bootstrap": "^3.3.7",
    "electron-save-file": "^1.0.2",
    "electron-store": "^1.3.0",
    "file-saver": "^1.3.3",
    "fs-jetpack": "^1.3.0",
    "isomorphic-fetch": "^2.2.1",
    "prop-types": "^15.6.0",
    "react": "^16.1.0",
    "react-autosuggest": "^9.3.2",
    "react-bootstrap": "^0.31.5",
    "react-datepicker": "^0.61.0",
    "react-dom": "^16.1.0",
    "react-notification-system": "^0.2.16",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-persist": "^5.3.5",
    "redux-persist-electron-storage": "^1.1.2",
    "redux-thunk": "^2.2.0",
    "x2js": "github:abdmob/x2js"
  },
  "build": {
    "appId": "com.intellisoft.mcaz",
    "mac": {
      "category": "com.intellisoft.mcaz"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
